<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageButton
                android:id="@+id/thumb_button_1"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:background="@drawable/planta1"
                android:contentDescription="@string/description_image_1"
                android:elevation="5dp"
                android:scaleType="centerCrop" />

            <ImageButton
                android:id="@+id/thumb_button_2"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/planta2"
                android:contentDescription="@string/description_image_1"
                android:elevation="5dp"
                android:scaleType="centerCrop" />

            <ImageButton
                android:id="@+id/thumb_button_3"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/planta3"
                android:contentDescription="@string/description_image_1"
                android:elevation="5dp"
                android:scaleType="centerCrop" />

            <ImageButton
                android:id="@+id/thumb_button_4"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/planta4"
                android:contentDescription="@string/description_image_1"
                android:elevation="5dp"
                android:scaleType="centerCrop" />

        </LinearLayout>

        <ImageView
            android:id="@+id/expanded_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/description_zoom_touch_close"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtplanta_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/myrect"
                android:elevation="5dp"
                android:padding="5dp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:visibility="invisible"
                tools:visibility="invisible" />
        </LinearLayout>

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>